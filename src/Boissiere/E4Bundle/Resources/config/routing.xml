<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="boissiere_e4_homePage" path="/">
        <default key="_controller">BoissiereE4Bundle:Default:index</default>
    </route>
    <route id="boissiere_e4_associationPage" path="/association">
        <default key="_controller">BoissiereE4Bundle:Association:index</default>
    </route>
    <route id="boissiere_e4_planningPage" path="/planning">
        <default key="_controller">BoissiereE4Bundle:admin\Events:index</default>
    </route>
    <route id="boissiere_e4_MembersPage" path="/members">
        <default key="_controller">BoissiereE4Bundle:admin\Members:index</default>
    </route>
    <route id="boissiere_e4_SongsPage" path="/songs">
        <default key="_controller">BoissiereE4Bundle:admin\Songs:index</default>
    </route>
    <route id="boissiere_e4_AddMemberPage" path="/addMember">
        <default key="_controller">BoissiereE4Bundle:admin\AddMember:index</default>
    </route>
    <route id="boissiere_e4_editMemberPage" path="/editMember/{id}">
        <default key="_controller">BoissiereE4Bundle:admin\EditMember:index</default>
    </route>
    <route id="boissiere_e4_deleteMemberPage" path="/deleteMember/{id}">
        <default key="_controller">BoissiereE4Bundle:admin\DeleteMember:index</default>
    </route>
    <route id="boissiere_e4_AddEventPage" path="/addEvent">
        <default key="_controller">BoissiereE4Bundle:admin\AddEvent:index</default>
    </route>
    <route id="boissiere_e4_editEventPage" path="/editEvent/{id}">
        <default key="_controller">BoissiereE4Bundle:admin\EditEvent:index</default>
    </route>
    <route id="boissiere_e4_deleteEventPage" path="/deleteEvent/{id}">
        <default key="_controller">BoissiereE4Bundle:admin\DeleteEvent:index</default>
    </route>
    <route id="boissiere_e4_AddSongPage" path="/addSong">
        <default key="_controller">BoissiereE4Bundle:admin\AddSong:index</default>
    </route>
    <route id="boissiere_e4_DownloadPage" path="/download/{filename}">
        <default key="_controller">BoissiereE4Bundle:DownloadSong:download</default>
    </route>
    <route id="boissiere_e4_deleteSongPage" path="/deleteSong/{id}">
        <default key="_controller">BoissiereE4Bundle:admin\DeleteSong:index</default>
    </route>
    <route id="boissiere_e4_moderationPage" path="/moderation">
        <default key="_controller">BoissiereE4Bundle:Moderation:index</default>
    </route>
    <route id="boissiere_e4_moderationEventPage" path="/moderationEvent/{id}">
        <default key="_controller">BoissiereE4Bundle:ModerationEvent:index</default>
    </route>
</routes>
